{{#if admin}}
<div class="accordion sozler" id="accordionExample">
    {{#each post}}
    <div class="card">
        <div class="card-header" id="heading{{this.id}}">
            <h2 class="mb-0">
                <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                    data-target="#{{this.id}}" aria-expanded="true" aria-controls="collapseOne">
                    {{this.title}} - {{this.author}}
                </button>
            </h2>
        </div>

        <div id="{{this.id}}" class="collapse" aria-labelledby="heading{{this.id}}" data-parent="#accordionExample">
            <div class="card-body">
                {{this.content}}
            </div>
        </div>
    </div>
    {{/each}}
</div>
